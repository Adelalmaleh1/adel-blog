<h1 align= "center"> All Bloggers</h1>
<div align= "center">
	<%= will_paginate @articles %>
	<% @users.each do |user| %>
		<ul class= "listing">
			<div class= "row">
				<div class= "well col-md-4 col-md-offset-4">
					<li class="round-image-50" ><%= link_to image_tag(current_user.avatar.url(:thumb))%></li>
					<li> <%= link_to current_user.username, user_path(current_user)%></li>
					<li class="article-title">
						<%= link_to user.username, user_path(user) %>
					</li>
					<li><small><%= pluralize(user.articles.count, "article") if user.articles %></small>
					</li>
				</div>
			</div>
		</ul>
	<% end %>
	<%= will_paginate %>
</div>